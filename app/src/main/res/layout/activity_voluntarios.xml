<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E9D7"
    tools:context=".VoluntarioActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp">

            <!-- Cabeçalho -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="260dp">

                <ImageView
                    android:id="@+id/headerBackground"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/cabecalho_voluntarios" />
            </FrameLayout>


            <!-- Título de Categoria -->
            <TextView
                android:id="@+id/subtitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Escolha a categoria"
                android:textSize="16sp"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>

            <!-- Botões de categoria -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/btnCuidados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Cuidados"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp" />

                <Button
                    android:id="@+id/btnSaude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Saúde"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp" />

                <Button
                    android:id="@+id/btnCozinha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cozinha"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp" />
            </LinearLayout>

            <!-- Descrições -->
            <TextView
                android:id="@+id/descriptionCuidadosTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Cuidados"
                android:textColor="@color/font_color"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/descriptionCuidadosText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Atividades ligadas ao contato com nossas crianças, como brincadeiras e outras tarefas."
                android:textColor="@color/font_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/descriptionSaudeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Saúde"
                android:textColor="@color/font_color"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/descriptionSaudeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Atividades ligadas ao atendimento de crianças em tratamento."
                android:textColor="@color/font_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/descriptionCozinhaTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Cozinha"
                android:textColor="@color/font_color"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/descriptionCozinhaText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Atividades ligadas à cozinha."
                android:textColor="@color/font_color"
                android:textSize="14sp" />

            <!-- Título principal -->
            <TextView
                android:id="@+id/mainTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:text="Ajude a transformar o mundo com pequenas ações!"
                android:textColor="@color/primary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Descrição -->
            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="Ao se tornar um voluntário, você pode impactar vidas, construir uma comunidade mais forte e criar memórias que durarão para sempre. Junte-se a nós nesta jornada de transformação!"
                android:textColor="@color/font_color"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSignUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="#3B6254"
                    android:text="Cadastrar-se"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnLearnMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#555555"
                    android:text="Saiba mais"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Barra inferior -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:backgroundTint="@color/primary"
            android:layout_gravity="bottom"
            app:fabCradleMargin="8dp"
            app:fabCradleRoundedCornerRadius="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!-- Inicio -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/imageViewInicio2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        app:srcCompat="@drawable/bottom_button1" />
                    <TextView
                        android:id="@+id/textViewInicio2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ínicio"
                        android:textAlignment="center"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <!-- Carteira -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/imageViewCarteira2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        app:srcCompat="@drawable/bottom_button2" />
                    <TextView
                        android:id="@+id/textViewCarteira2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Carteira"
                        android:textAlignment="center"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <!-- Em Branco -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        app:srcCompat="@drawable/bottom_btn1" />

                </LinearLayout>

                <!-- Perfil -->
                <LinearLayout
                    android:id="@+id/profileBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/imageViewPerfil2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        app:srcCompat="@drawable/bottom_button3" />
                    <TextView
                        android:id="@+id/textViewPerfil2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Perfil"
                        android:textAlignment="center"
                        android:textColor="@color/white" />
                </LinearLayout>

                <!-- Config -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/imageViewConfig2"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        app:srcCompat="@drawable/bottom_button4" />
                    <TextView
                        android:id="@+id/textViewConfig2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Config"
                        android:textAlignment="center"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.bottomappbar.BottomAppBar>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/float_icon"
            android:layout_gravity="center"
            app:backgroundTint="@color/primary"
            app:tint="@color/white" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
